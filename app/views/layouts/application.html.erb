<!DOCTYPE html>
<html>
  <head>
    <title>Twitter</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.7.0/dist/css/bootstrap.min.css" %>
    <%= stylesheet_link_tag "https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" %>
    <%= javascript_importmap_tags %>
  </head>

<body>
  <% if flash[:notice] %>
    <div class="notification is-primary global-notification">
      <p class="notice"><%= flash[:notice] %></p>
    </div>
  <% end %>
  <% if flash[:alert] %>
    <div class="notification is-danger global-notification">
      <p class="alert"><%= flash[:alert] %></p>
    </div>
  <% end %>
  <nav class="navbar is-info">
    <div class="navbar-brand">
      <%= link_to root_path, class: "navbar-item" do %>
        <h1 class="title is-5">Tweeetter</h1>
      <% end %>
      <div class="navbar-burger burger" data-target="navbarExample">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>
  <div id="navbarExample" class="navbar-menu">
  <div class="navbar-end">
    <div class="field is-grouped">
      <% if user_signed_in? %>
        <p class="control">
          <%= link_to "New Tweeet", new_tweeet_path, class: "button is-info is-inverted" %>
        </p>
        <p class="control">
          <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "button is-info is-inverted" %>
        </p>
      <% else %>
        <p class="control">
          <%= link_to "Sign Up", new_user_registration_path, class: "button is-info" %>
        </p>
        <p class="control">
          <%= link_to "Log In", new_user_session_path, class: "button is-info is-inverted" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
</nav>

  <%= yield %>
</body>

</html>
